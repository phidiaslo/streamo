<%= simple_form_for(@series, :html => { :multipart => true }) do |f| %>
  <% if @series.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@series.errors.count, "error") %> prohibited this series from being saved:</h2>

      <ul>
      <% @series.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :name %><br>
    <%= f.text_field :name, class: "form-control" %>
  </div>

  <div class="form-group form-inline">
      <%= f.input :date_aired, as: :date, start_year: Date.today.year,
                                end_year: Date.today.year - 80, 
                                order: [:day, :month, :year], label: 'Date Aired', input_html: { class: 'form-control' } %>
  </div>

  <div class="form-group">
    <%= f.label :synopsis %><br>
    <%= f.text_area :synopsis, :rows => 5, class: "form-control" %>
  </div>
  <div class="form-group">
  <%= f.input :status, collection: ['Ongoing','Complete'], as: :radio_buttons, wrapper_html: { class: 'form-inline' } %>
  </div>
  <div class="form-group">
    <%= f.label :cover %><br>
    <%= f.file_field :cover, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.submit class: "btn btn-primary"  %>
  </div>
<% end %>
